@model IEnumerable<ToDo.Models.Tasks>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tasks List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="TasksManagement" asp-action="Create" class="btn btn-primary">
                Create Task
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Id of ToDo
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Is it complete
                    </th>
                    <th>
                        Date of creation
                    </th>
                    <th>
                        Id of creator
                    </th>
                    <th>
                        Date of edit
                    </th>
                    <th>
                        Id of editor
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="20%">@obj.Id</td>
                    <td width="10%">@obj.IdList</td>
                    <td width="10%">@obj.Title</td>
                    <td width="10%">@obj.Description</td>
                    <td width="10%">@obj.IsComplete</td>
                    <td width="10%">@obj.DateCreation</td>
                    <td width="10%">@obj.IdCreator</td>
                    <td width="10%">@obj.DateChange</td>
                    <td width="10%">@obj.IdChange</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="TasksManagement" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="TasksManagement" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>